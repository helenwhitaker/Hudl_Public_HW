<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="RegressionTestSuite" verbose="1">
    <test name="Positive Login Test in Chrome Accept Cookies">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.testautomation.tests.login.LoginTests">
                <methods>
                    <include name="testLoginFunctionalityAcceptCookiesIgnoreAdRoll"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="Positive Login Test in Chrome Reject Cookies">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.testautomation.tests.login.LoginTests">
                <methods>
                    <include name="testLoginFunctionalityRejectCookiesIgnoreAdRoll"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Negative Login Test in Chrome Invalid Username1">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.testautomation.tests.login.LoginTests">
                <methods>
                    <include name="negativeLoginTestInvalidUsername"/>
                </methods>
            </class>
        </classes>
    </test>



    <test name="Negative Login Test in Chrome Invalid Username2">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.testautomation.tests.login.LoginTests">
                <methods>
                    <include name="negativeLoginTestInvalidUsername"/>
                </methods>
            </class>
        </classes>
    </test>add


    <test name="testSelectGoogleLogin">
        <classes>
            <class name="com.testautomation.tests.login.LoginTests">
                <methods>
                    <include name="testSelectGoogleLogin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="testSelectFacebookLogin">
        <classes>
            <class name="com.testautomation.tests.login.LoginTests">
                <methods>
                    <include name="testSelectFacebookLogin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="testSelectAppleLogin">
        <classes>
            <class name="com.testautomation.tests.login.LoginTests">
                <methods>
                    <include name="testSelectAppleLogin"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>